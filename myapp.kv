MDScreenManager:
    MainScreen:
    DictionaryScreen:
    AddWordScreen:
    UserInput:
    VerbsScreen:
    ConnectedPronouns:
    FavoriteScreen:
    ContactUs:
<MainScreen>:
    name: "main"
    md_bg_color: 10/255, 25/255, 47/255, 1
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        MDFloatLayout:
            size_hint: 1, 0.1
            MDLabel:
                text: app.get_arabic_text("تنبيــه")
                size_hint_x: 0.4
                color: 180/255, 190/255, 200/255, 1
                font_name: "Amiri-Regular"
                font_size: self.height * 0.5
                pos_hint: {"center_x": 0.62, "center_y": 0.5}
        MDLabel:
            text: app.get_arabic_text("""الشاوية هي لهجة أمازيغية يتحدث بها سكان ثلاث ولايات \n جزائريــة رئيسيــة:أم البواقي خنشلـــة وباتنــة بالإضافــة إلى \n بعض المناطق من تبسة وسوق أهراس و تختلف بعض \n الكلمات بين المناطق، وقد تم بناء هذا القاموس استنادًا \n إلى لهجة الشاوية في منطقة أم البواقي، وبالتحديد مدينة \n عين مليلة نرحب بمساهمة المستخدمين من خنشلة وباتنة \n لإضافة الكلمــات التي تختلــف عن المستخدمـــة في عيـن \n مليلـــة، وذلك بهدف إنشـــاء قامــوس أكثــر شمــولًا \n ملاحظة: يمكنكم العثور على معلومات حول المبرمج \n في صفحة تواصل معنا""")
            color: 180/255, 190/255, 200/255, 1
            font_name: "Amiri-Regular"
            halign: "center"
            size_hint_y: 0.5
            font_size: self.height * 0.06
        MDGridLayout:
            cols: 2
            spacing: 10
            padding: 10
            size_hint_y: 0.7
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "dictionary"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    Image:
                        source:"dictionary12.png"
                        size_hint_y: 0.6
                    MDLabel:
                        text: app.get_arabic_text("القاموس")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.63
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "verbsinput"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    Image:
                        source:"word-of-mouth.png"
                        size_hint_y: 0.7
                    MDLabel:
                        text: app.get_arabic_text("تصريف الأفعال")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.6
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "favorite"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    Image:
                        source:"Favorite.png"
                        size_hint_y: 0.7
                    MDLabel:
                        text: app.get_arabic_text("المفضلة")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.65
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "addword"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    Image:
                        source:"puzzle.png"
                        size_hint_y: 0.6
                    MDLabel:
                        text: app.get_arabic_text("إضافة كلمة")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.6
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "pronouninput"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    Image:
                        source:"connection.png"
                        size_hint_y: 0.6
                    MDLabel:
                        text: app.get_arabic_text("الضمائر المتصلة")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.5
            MDButton:
                style: "elevated"
                size_hint: 1, 1
                line_color: 0, 0, 0, 0
                on_release: app.root.current = "contact"
                canvas.before:
                    Color:
                        rgba: 35/255, 50/255, 100/255, 0.5
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                MDBoxLayout:
                    orientation: "vertical"
                    Image:
                        source:"contact-us.png"
                        size_hint_y: 0.5
                    MDLabel:
                        text: app.get_arabic_text("تواصل معنا")
                        font_name: "Amiri-Regular"
                        color: 180/255, 190/255, 200/255, 1
                        halign: "center"
                        size_hint_y: 0.3
                        font_size: self.height * 0.5
<DictionaryScreen>:
    name: "dictionary"
    md_bg_color: "#ddc6b6"
    MDFloatLayout:
        MDCard:
            size_hint: None, None
            size: dp(280), dp(290)
            radius: [20,]
            elevation: 1.5
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            md_bg_color: "#262223"
            MDFloatLayout:
                spacing: 10
                size_hint: 1, 1
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: "#eebe90"
                    on_release: app.root.current = "main"
                    size_hint: 0.2, 0.2
                    pos_hint: {"center_x": 0.09, "center_y": 0.65}
                Dic_text:
                    id: dictionary_input
                    font_name: "Amiri-Regular"
                    line_color_normal: "#ffffff"
                    line_color_focus : "#ffffff"
                    size_hint: 0.73, 0.16
                    pos_hint: {"center_x": 0.55, "center_y": 0.65}
                MDButton:
                    style: "outlined"  # يمكنك تغييره إلى "filled", "elevated", أو "tonal"
                    md_bg_color: "#ddc6b6"
                    pos_hint: {"center_x": 0.5, "center_y": 0.36}
                    on_release: root.on_search()

                    MDBoxLayout:
                        spacing: "8dp"
                        padding: "8dp"
                        adaptive_size: True

                        MDButtonIcon:
                            icon: "magnify"
                            icon_color: "#262648"
                            icon_size: "20dp"

                        MDButtonText:
                            text: app.get_arabic_text("بحث")
                            font_name: "Amiri-Regular"
                            theme_text_color: "Custom"
                            text_color: "#262648"
        MDCard:
            size_hint: None, None
            elevation: 1
            size: dp(225), dp(340)
            radius: [20,]
            md_bg_color: "#ddc6b6"
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            MDFloatLayout:
                MDLabel:
                    id: result_label
                    text: ""
                    font_name: "Amiri-Regular"
                    color: "#262223"
                    halign: "right"
                    size_hint_y: 1
                    pos_hint: {"center_x": 0.47, "center_y": 0.42}
        MDIconButton:
            id: favorite_button
            icon: "heart"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint: 0.2, 0.09
            pos_hint: {"center_x": 0.5, "center_y": 0.07}
            md_bg_color: "262223"
<AddWordScreen>:
    name: "addword"
    md_bg_color: 5/255, 15/255, 30/255, 1
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        MDTopAppBar:
            md_bg_color: 15/255, 25/255, 50/255, 1
            pos_hint: {"center_x": 0.5, "top": 1}
            MDFloatLayout:
                size_hint: 1, 1
                padding: 10
                spacing: 10
                MDLabel:
                    text: app.get_arabic_text("إضافة كلمة أو جملة")
                    font_name: "Amiri-Regular"
                    color: 180/255, 190/255, 200/255, 1
                    font_size: "15sp"
                    size_hint: 0.5, 0.8
                    pos_hint: {"center_x": 0.55, "center_y": 1}
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: 180/255, 190/255, 200/255, 1
                    on_release: app.root.current = "main"
                    size_hint: 0.1, 0.8
                    pos_hint: {"center_x": 0.05, "center_y": 1}
                MDIconButton:
                    id: add_button
                    icon: "plus"
                    theme_icon_color: "Custom"
                    icon_color: 180/255, 190/255, 200/255, 1
                    pos_hint: {"center_x": 0.95, "center_y": 1}
                    on_release: app.root.current = "userinput"
        ScrollView:
            MDList:
                id: mdlist
                spacing: 10
                padding: 10
<UserInput>:
    name: "userinput"
    md_bg_color: 5/255, 15/255, 30/255, 1
    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        MDFloatLayout:
            size_hint_y: 1.5
            MDIconButton:
                icon: "arrow-left"
                theme_icon_color: "Custom"
                icon_color: 180/255, 190/255, 200/255, 1
                pos_hint: {"center_x": 0.1, "center_y": 0.90}
                on_release: app.root.current = "addword"
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8
            padding: 10
            spacing: 80
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Ar_text:
                id: word_input
                font_name: "Amiri-Regular"
                line_color_normal: 1, 1, 1, 1
            Ch_text:
                id: meaning_input
                font_name: "Amiri-Regular"
                line_color_normal: 1, 1, 1, 1
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 1.2
            MDButton:
                style: "filled"  # أو "elevated" حسب رغبتك
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: root.save_word(word_input.text, meaning_input.text)
                MDBoxLayout:
                    spacing: "8dp"
                    padding: "8dp"
                    adaptive_size: True
                    MDButtonIcon:
                        icon: "content-save"
                        icon_color: 5/255, 15/255, 30/255, 1
                    MDButtonText:
                        text: "save"
                        theme_text_color: "Custom"
                        text_color: 5/255, 15/255, 30/255, 1
            Widget:
<VerbsScreen>:
    name: "verbsinput"
    md_bg_color: 5/255, 15/255, 30/255, 1
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        padding: 10
        spacing: 10
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: 0.1
            pos_hint: {"top": 1}
            MDIconButton:
                icon: "arrow-left"
                theme_icon_color: "Custom"
                icon_color: 180/255, 190/255, 200/255, 1
                on_release: app.root.current = "main"
                size_hint_x: 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Ver_text:
                id: verb_input
                font_name: "Amiri-Regular"
                line_color_normal: 1, 1, 1, 1
                line_color_focus : 1, 1, 1, 1
        MDButton:
            style: "outlined"
            md_bg_color: "#ddc6b6"
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            on_release: root.on_search_verb()
            radius: [12]  # لتقريب الشكل المستطيل بزوايا ناعمة

            MDBoxLayout:
                spacing: "8dp"
                padding: "8dp"
                adaptive_size: True

                MDButtonIcon:
                    icon: "magnify"
                    icon_color: "#262648"
                    icon_size: "20dp"

                MDButtonText:
                    text: app.get_arabic_text("بحث")
                    font_name: "Amiri-Regular"
                    theme_text_color: "Custom"
                    text_color: "#262648"
        MDScrollView:
            do_scroll_y: True
            do_scroll_x: False
            MDBoxLayout:
                orientation: "vertical"
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                MDLabel:
                    id: verb_label
                    text: ""
                    font_name: "Amiri-Regular"
                    color: 1, 1, 1, 1
                    font_size: "15sp"
                    halign: "right"
                    valign: "top"
                    markup: True
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
