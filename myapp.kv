                font_size: max(self.width, self.height) * 0.08
                pos_hint: {"center_x": 0.6, "center_y": 0.3}
                size_hint_x: 0.7
        MDRectangleFlatIconButton:
            text: app.get_arabic_text("بحث")
            icon: "magnify"
            radius: [20, 20, 20, 20]
            md_bg_color: "ddc6b6"
            icon_color: "#262648"
            icon_size: "20dp"
            font_name: "Amiri-Regular"
            line_color: 0, 0, 0, 0
            text_color: "#262648"
            font_size: max(self.width, self.height) * 0.17
            icon_size: max(self.width, self.height) * 0.25
            size_hint: 0.3, 0.03
            pos_hint: {"center_x": 0.55, "center_y": 0.3}
            on_release: root.on_search_verb()
        MDScrollView:
            do_scroll_y: True
            do_scroll_x: False
            MDBoxLayout:
                orientation: "vertical"
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
