                    id: verb_label
                    text: ""
                    font_name: "Amiri-Regular"
                    color: 1, 1, 1, 1
                    font_size: "15sp"
                    halign: "right"
                    valign: "top"
                    markup: True
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
