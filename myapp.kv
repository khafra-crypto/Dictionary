<DictionaryScreen>:
    name: "dictionary"
    md_bg_color: "#ddc6b6"
    MDFloatLayout:
        MDCard:
            size_hint: 1.02, 0.45
            radius: [min(self.width, self.height) * 0.1]
            elevation: 1.5
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            md_bg_color: "#262223"
            MDFloatLayout:
                spacing: 10
                size_hint: 1, 1
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: "#eebe90"
                    icon_size: min(self.width, self.height) * 0.45
                    on_release: app.root.current = "main"
                    size_hint: 0.2, 0.2
                    pos_hint: {"center_x": 0.1, "center_y": 0.65}
                Dic_text:
                    id: dictionary_input
                    font_name: "Amiri-Regular"
                    line_color_normal: "#ffffff"
                    line_color_focus : "#ffffff"
                    font_size: min(self.width, self.height) * 0.35
                    size_hint: 0.73, 0.16
                    pos_hint: {"center_x": 0.55, "center_y": 0.65}
                MDRectangleFlatIconButton:
                    text: app.get_arabic_text("بحث")
                    icon: "magnify"
                    #radius: [20, 20, 20, 20]
                    md_bg_color: "ddc6b6"
                    icon_color: "#262648"
                    icon_size: self.width * 0.2
                    font_name: "Amiri-Regular"
                    line_color: 0, 0, 0, 0
                    text_color: "#262648"
                    font_size: max(self.width, self.height) * 0.17
                    pos_hint: {"center_x": 0.50, "center_y": 0.36}
                    size_hint: 0.3, 0.1
                    on_release: root.on_search()
        MDCard:
            size_hint: None, None
            elevation: 1
            size_hint: 0.8, 0.55
            radius: [min(self.width, self.height) * 0.13]
            md_bg_color: "#ddc6b6"
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            MDFloatLayout:
                MDLabel:
                    id: result_label
                    text: ""
                    font_name: "Amiri-Regular"
                    font_size: max(self.width, self.height) * 0.048
                    color: "#262223"
                    halign: "right"
                    size_hint_y: 1
                    pos_hint: {"center_x": 0.47, "center_y": 0.42}
        MDIconButton:
            id: favorite_button
            icon: "heart"
            icon_size: max(self.width, self.height) * 0.4
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint: 0.2, 0.095
            pos_hint: {"center_x": 0.5, "center_y": 0.07}
            md_bg_color: "262223"
<AddWordScreen>:
    name: "addword"
    md_bg_color: 5/255, 15/255, 30/255, 1
    MDFloatLayout:
        size_hint: 1, 1
        MDTopAppBar:
            md_bg_color: 15/255, 25/255, 50/255, 1
            pos_hint: {"center_x": 0.5, "top": 1}
            size_hint: 1, 0.12
            MDFloatLayout:
                size_hint: 1, 1
                spacing: min(self.width, self.height) * 0.1
                padding: min(self.width, self.height) * 0.1
                MDLabel:
                    text: app.get_arabic_text("إضافة كلمة أو جملة")
