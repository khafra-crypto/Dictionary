                    icon_size: self.width * 0.4
                    size_hint: 0.2, 0.9
                    pos_hint: {"center_x": 0.08, "center_y": 1}
                MDIconButton:
                    id: add_button
                    icon_size: self.width * 0.4
                    size_hint: 0.2, 0.9
                    icon: "plus"
                    theme_icon_color: "Custom"
                    icon_color: 180/255, 190/255, 200/255, 1
                    pos_hint: {"center_x": 0.93, "center_y": 1}
                    on_release: app.root.current = "userinput"
        ScrollView:
            pos_hint: {"center_x": 0.5, "top": 0.88}
            size_hint: 1, 0.89
            MDList:
                id: mdlist
                padding: min(self.width, self.height) * 0.1
<UserInput>:
    name: "userinput"
    md_bg_color: 5/255, 15/255, 30/255, 1
    MDBoxLayout:
        orientation: "vertical"
        spacing: min(self.width, self.height) * 0.1
        padding: min(self.width, self.height) * 0.1
        MDFloatLayout:
            size_hint_y: 1.5
            MDIconButton:
                icon: "arrow-left"
                icon_size: self.width * 0.5
                size_hint: 0.2, 0.9
                theme_icon_color: "Custom"
                icon_color: 180/255, 190/255, 200/255, 1
                pos_hint: {"center_x": 0.05, "center_y": 0.90}
                on_release: app.root.current = "addword"
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8
            spacing: min(self.width, self.height) * 0.5
            padding: min(self.width, self.height) * 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Ar_text:
                id: word_input
                font_size: max(self.width, self.height) * 0.08
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                font_name: "Amiri-Regular"
                line_color_normal: 1, 1, 1, 1
            Ch_text:
                id: meaning_input
                font_size: max(self.width, self.height) * 0.08
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                font_name: "Amiri-Regular"
                line_color_normal: 1, 1, 1, 1
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 1.2
            MDFillRoundFlatIconButton:
                text: "save"
                icon: "content-save"
                size_hint: 0.35, 0.2
                text_color: 5/255, 15/255, 30/255, 1
                icon_color: 5/255, 15/255, 30/255, 1
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: root.save_word(word_input.text, meaning_input.text)
            Widget:
<VerbsScreen>:
