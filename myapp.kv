                    color: 180/255, 190/255, 200/255, 1
                    font_size: self.height * 0.45
                    pos_hint: {"center_x": 0.80, "center_y": 1}
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
